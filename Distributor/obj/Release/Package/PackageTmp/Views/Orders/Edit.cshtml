@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Order details</h3>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.OrderId)

                        <div class="form-group">
                            <div class="col-md-4">@Html.LabelFor(model => model.OrderStatus)</div>
                            <div class="col-md-8">
                                @Html.EnumDropDownListFor(model => model.OrderStatus, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.OrderStatus, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">@Html.LabelFor(model => model.OrderQuanity)</div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.OrderQuanity, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.OrderQuanity, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">@Html.Label("Unit of measure")</div>
                            <div class="col-md-8">@uoM</div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">@Html.LabelFor(model => model.OrderCreationDateTime)</div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.OrderCreationDateTime, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control date-picker" } })

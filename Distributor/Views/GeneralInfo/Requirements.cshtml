<div class="table-responsive">
    <table class="table table-hover">
        <tr class="info">
            <th colspan="3">Actions</th>
            <th>@Html.DisplayNameFor(model => model.RequirementListing.ItemDescription)</th>
            <th>@Html.DisplayNameFor(model => model.RequirementListing.ItemType)</th>
            <th>@Html.DisplayNameFor(model => model.RequirementListing.QuantityOutstanding)</th>
            <th>@Html.DisplayNameFor(model => model.RequirementListing.UoM)</th>
            <th>@Html.DisplayNameFor(model => model.RequirementListing.RequiredFrom)</th>
            <th>@Html.DisplayNameFor(model => model.RequirementListing.RequiredTo)</th>
            <th>@Html.DisplayNameFor(model => model.RequirementListing.AcceptDamagedItems)</th>
            <th>@Html.DisplayNameFor(model => model.RequirementListing.AcceptOutOfDateItems)</th>
            <th>@Html.DisplayNameFor(model => model.RequirementListing.CollectionAvailable)</th>
        </tr>

        @foreach (var item in Model)
        {
            listingId = item.RequirementListing.ListingId;
            offerButton = "offerbutton" + listingId.ToString();
            saveButton = "savebutton" + listingId.ToString();
            offerQuantityField = "offerquantityfield" + listingId.ToString();
            offerQuanity = item.OfferQuantity;
            appUserId = item.RequirementListing.ListingOriginatorAppUserId.ToString();

            <tr id=@listingId>
                @if (offerQuanity == 0 && appUserId != currentAppUserId)
                {
                    <td><button type="submit" class="btn btn-xs btn-primary btn-block showhideofferdetails" id=@offerButton><span class="glyphicon glyphicon-usd"></span> Offer</button></td>
                }
                else
                {
                    <td><button type="submit" class="btn btn-xs btn-primary btn-block showhideofferdetails" id=@offerButton disabled><span class="glyphicon glyphicon-usd"></span> Offer</button></td>
                }
                <td>@Html.TextBoxFor(modelItem => item.OfferQuantity, new { id = @offerQuantityField, disabled = "disabled", style = "width:70px" })</td>
                <td><button type="submit" class="btn btn-xs btn-success btn-block showhideofferdetails" id=@saveButton disabled><span class="glyphicon glyphicon-ok"></span> Save</button></td>
                <td onclick="location.href='@Url.Action("Details", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.ItemDescription)</td>
                <td onclick="location.href='@Url.Action("Details", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.ItemType)</td>
                <td onclick="location.href='@Url.Action("Details", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.QuantityOutstanding)</td>
                <td onclick="location.href='@Url.Action("Details", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.UoM)</td>
                <td onclick="location.href='@Url.Action("Details", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.RequiredFrom)</td>
                <td onclick="location.href='@Url.Action("Details", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.RequiredTo)</td>
                <td onclick="location.href='@Url.Action("Details", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.AcceptDamagedItems)</td>
                <td onclick="location.href='@Url.Action("Details", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.AcceptOutOfDateItems)</td>
                <td onclick="location.href='@Url.Action("Details", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.CollectionAvailable)</td>
            </tr>
        }

    </table>
</div>


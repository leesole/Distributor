@model IEnumerable<Distributor.ViewModels.CampaignGeneralInfoView>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @*<a class="navbar-brand" href="#">Brand</a>*@
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="disabled">@Html.ActionLink("GENERAL INFO", "General", "Home")</li>
                <li>@Html.ActionLink("Requests", "Requirements", "GeneralInfo")</li>
                <li>@Html.ActionLink("Available", "Available", "GeneralInfo")</li>
                <li class="active">@Html.ActionLink("Campaigns", "Campaigns", "GeneralInfo")</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin: 10px 0px 10px">General Info <small>Campaigns</small></h1>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">Campaigns</li>
        </ol>
        <p class="lead">Current campaigns.</p>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <tr class="info">
            <th>@Html.DisplayNameFor(model => model.Campaign.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Campaign.StrapLine)</th>
            <th>@Html.DisplayNameFor(model => model.Campaign.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Campaign.Website)</th>
            <th>@Html.DisplayNameFor(model => model.Campaign.CampaignStartDateTime)</th>
            <th>@Html.DisplayNameFor(model => model.Campaign.CampaignEndDateTime)</th>
            <th>@Html.DisplayNameFor(model => model.Campaign.LocationName)</th>
            <th>@Html.DisplayNameFor(model => model.Campaign.LocationAddressLine1)</th>
            <th>@Html.DisplayNameFor(model => model.Campaign.LocationAddressTownCity)</th>
            <th>@Html.DisplayNameFor(model => model.Campaign.LocationAddressPostcode)</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Campaign.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Campaign.StrapLine)</td>
                <td>@Html.DisplayFor(modelItem => item.Campaign.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Campaign.Website)</td>
                <td>@Html.DisplayFor(modelItem => item.Campaign.CampaignStartDateTime)</td>
                <td>@Html.DisplayFor(modelItem => item.Campaign.CampaignEndDateTime)</td>
                <td>@Html.DisplayFor(modelItem => item.Campaign.LocationName)</td>
                <td>@Html.DisplayFor(modelItem => item.Campaign.LocationAddressLine1)</td>
                <td>@Html.DisplayFor(modelItem => item.Campaign.LocationAddressTownCity)</td>
                <td>@Html.DisplayFor(modelItem => item.Campaign.LocationAddressPostcode)</td>
            </tr>
        }

    </table>
</div>

<div class="form-group">
    @Html.ActionLink("Add campaign", "Create", "Campaigns", "", new { @class = "btn btn-primary" })
</div>
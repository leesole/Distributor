                            }
                            if (displayDeliveredButton)
                            {
                    <button type="submit" class="btn btn-sm btn-success" name="delivereddbutton"><span class="glyphicon glyphicon-ok"></span> Delivered</button>
                            }
                            if (displayClosedButton)

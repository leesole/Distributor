                                    displayClosedButton = false;
                                }
                                break;
                            case GeneralEnums.InternalSearchLevelEnum.User:
                                if (Model.OrderAppUser.AppUserId != ViewBag.ClosedAuthorisationId)
                                {
                                    displayClosedButton = false;
                                }
                                break;
                            case GeneralEnums.InternalSearchLevelEnum.Group:  //LSLSLS  TO BE DONE WHEN GROUPS ADDED
                                break;
                        }
                        }

                        @if (ViewBag.AllowBranchTrading)
                    {
                        if (Model.OrderBranchDetails.BranchId == ViewBag.CurrentBranchOrCompanyId)
                        {
                            inhouseOrder = true;
                        }
                    }
                    else
                    {
                        if (Model.OrderBranchDetails.CompanyId == ViewBag.CurrentBranchOrCompanyId)
                        {
                            inhouseOrder = true;
                        }

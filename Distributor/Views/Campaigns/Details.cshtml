            <div class="panel-heading">
                <h3 class="panel-title">Campaign created by</h3>
            </div>
            <div class="panel-body">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">Company</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.CampaignCompanyDetails.CompanyName)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.CampaignCompanyDetails.CompanyRegistrationDetails)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.CampaignCompanyDetails.CharityRegistrationDetails)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.CampaignCompanyDetails.VATRegistrationDetails)</div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            @if (Model.Buttons.CompanyBlockButton)
                            {
                                buttonId = "block:company:" + Model.CampaignCompanyDetails.CompanyId + ":" + currentAppUserId;
                                <button type="submit" class="btn btn-xs btn-danger" id=@buttonId onclick="buttonClick(id)"><span class="glyphicon glyphicon-remove"></span>Block</button>
                            }
                            @if (Model.Buttons.CompanyAddFriendButton)
                            {
                                buttonId = "friend:company:" + Model.CampaignCompanyDetails.CompanyId + ":" + currentAppUserId;
                                <button type="submit" class="btn btn-xs btn-success" id=@buttonId onclick="buttonClick(id)"><span class="glyphicon glyphicon-plus"></span>Friend</button>
                            }
                            @if (Model.Buttons.CompanyAddToGroupButton)
                            {
                                buttonId = "group:company:" + Model.CampaignCompanyDetails.CompanyId + ":" + currentAppUserId;
                                <button type="submit" class="btn btn-xs btn-primary" id=@buttonId onclick="buttonClick(id)"><span class="glyphicon glyphicon-plus"></span>Group</button>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">Branch</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">

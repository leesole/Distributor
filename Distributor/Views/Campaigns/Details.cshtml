                </div>
                <div class="row">
                    <div class="col-md-4">@Html.LabelFor(model => model.EntityStatus)</div>
                    <div class="col-md-8">@Html.DisplayFor(model => model.EntityStatus)</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="login-panel panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Campaign poster</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4">@Html.LabelFor(model => model.Image)</div>
                    <div class="col-md-8">@Html.DisplayFor(model => model.Image)</div>

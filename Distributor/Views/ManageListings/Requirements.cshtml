@model IEnumerable<Distributor.ViewModels.RequirementListingManageView>

<nav class="navbar navbar-fixed-top">
    <div class="navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Distributor", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <nav class="navbar navbar-default">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<a class="navbar-brand" href="#">Brand</a>*@
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="disabled">@Html.ActionLink("MANAGE LISTINGS", "General", "Home")</li>
                    <li class="active">@Html.ActionLink("Requests", "Requirements", "ManageListings")</li>
                    <li>@Html.ActionLink("Available", "Available", "ManageListings")</li>
                    <li>@Html.ActionLink("Campaigns", "Campaigns", "ManageListings")</li>
                    <li>@Html.ActionLink("Offers", "Offers", "ManageListings")</li>
                    <li>@Html.ActionLink("Orders", "Orders", "ManageListings")</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav>
</nav>

<div class="row" style="padding-top:55px">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin: 10px 0px 10px">Manage Listings <small>Requests</small></h1>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">Requests</li>
        </ol>
        <p class="lead">Your current requirement listings.</p>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-hover">
        <tr class="info">
            <th>Description</th>
            <th>Type</th>
            <th>Qty reqd</th>
            <th>UoM</th>
            <th>From</th>
            <th>To</th>
            <th>Damaged</th>
            <th>Out of date</th>
            <th>Collection</th>
        </tr>

        @foreach (var item in Model)
        {
            Html.HiddenFor(modelItem => item.RequirementListing.RequiredFrom);
            Html.HiddenFor(modelItem => item.RequirementListing.RequiredTo);

            var dateFrom = "";
            var dateTo = "";
            if (item.RequirementListing.RequiredFrom != null)
            {
                dateFrom = item.RequirementListing.RequiredFrom.Value.ToShortDateString();
            }
            if (item.RequirementListing.RequiredTo != null)
            {
                dateTo = item.RequirementListing.RequiredTo.Value.ToShortDateString();
            }

            <tr>
                <td onclick="location.href='@Url.Action("Edit", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.ItemDescription)</td>
                <td onclick="location.href='@Url.Action("Edit", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.ItemType)</td>
                <td onclick="location.href='@Url.Action("Edit", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.QuantityOutstanding)</td>
                <td onclick="location.href='@Url.Action("Edit", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.UoM)</td>
                <td onclick="location.href='@Url.Action("Edit", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@dateFrom</td>
                <td onclick="location.href='@Url.Action("Edit", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@dateTo</td>
                <td onclick="location.href='@Url.Action("Edit", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.AcceptDamagedItems)</td>
                <td onclick="location.href='@Url.Action("Edit", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.AcceptOutOfDateItems)</td>
                <td onclick="location.href='@Url.Action("Edit", "RequirementListings", new { id = item.RequirementListing.ListingId })'">@Html.DisplayFor(modelItem => item.RequirementListing.CollectionAvailable)</td>
            </tr>
        }

    </table>
</div>

<div class="form-group">
    @Html.ActionLink("Create listing", "Create", "RequirementListings", "", new { @class = "btn btn-primary" })
</div>

<div class="row" style="padding-top:55px">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin: 10px 0px 10px">Request Listing <small>Listing Details</small></h1>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Requests", "Requirements", "GeneralInfo")</li>
            <li class="active">Listing Details</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="login-panel panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Listing details</h3>
            </div>
            <div class="panel-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ListingId)    
                
                @Html.HiddenFor(model => model.RequiredFrom)
                @Html.HiddenFor(model => model.RequiredTo)

                @{
                    var dateFrom = "";
                    var dateTo = "";
                    if (Model.RequiredFrom != null)
                    {
                        dateFrom = Model.RequiredFrom.Value.ToShortDateString();
                    }
                    if (Model.RequiredTo != null)
                    {
                        dateTo = Model.RequiredTo.Value.ToShortDateString();
                    }
                }

                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.ItemDescription)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.ItemDescription)</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.ItemType)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.ItemType)</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.QuantityRequired)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.QuantityRequired)</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.QuantityFulfilled)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.QuantityFulfilled)</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.QuantityOutstanding)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.QuantityOutstanding)</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.UoM)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.UoM)</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.RequiredFrom)</div></div>
                <div class="row"><div class="col-md-12">@dateFrom</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.RequiredTo)</div></div>
                <div class="row"><div class="col-md-12">@dateTo</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.AcceptDamagedItems)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.AcceptDamagedItems)</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.AcceptOutOfDateItems)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.AcceptOutOfDateItems)</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.CollectionAvailable)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.CollectionAvailable)</div></div>
                <br />
                <div class="row"><div class="col-md-12">@Html.LabelFor(model => model.ListingStatus)</div></div>
                <div class="row"><div class="col-md-12">@Html.DisplayFor(model => model.ListingStatus)</div></div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="login-panel panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Listing created by</h3>
            </div>
            <div class="panel-body">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">Company</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.ListingCompanyDetails.CompanyName)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.ListingCompanyDetails.CompanyRegistrationDetails)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.ListingCompanyDetails.CharityRegistrationDetails)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.ListingCompanyDetails.VATRegistrationDetails)</div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            @if (Model.Buttons.CompanyBlockButton)
                            {
                                buttonId = "block:company:" + Model.ListingCompanyDetails.CompanyId + ":" + currentAppUserId;
                                <button type="submit" class="btn btn-xs btn-danger" id=@buttonId onclick="buttonClick(id)"><span class="glyphicon glyphicon-remove"></span>Block</button>
                            }
                            @if (Model.Buttons.CompanyAddFriendButton)
                            {
                                buttonId = "friend:company:" + Model.ListingCompanyDetails.CompanyId + ":" + currentAppUserId;
                                <button type="submit" class="btn btn-xs btn-success" id=@buttonId onclick="buttonClick(id)"><span class="glyphicon glyphicon-plus"></span>Friend</button>
                            }
                            @if (Model.Buttons.CompanyAddToGroupButton)
                            {
                                buttonId = "group:company:" + Model.ListingCompanyDetails.CompanyId + ":" + currentAppUserId;
                                <button type="submit" class="btn btn-xs btn-primary" id=@buttonId onclick="buttonClick(id)"><span class="glyphicon glyphicon-plus"></span>Group</button>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">Branch</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.ListingBranchDetails.BranchName)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.ListingBranchDetails.AddressLine1)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.ListingBranchDetails.AddressTownCity)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.ListingBranchDetails.AddressCounty)</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DisplayFor(model => model.ListingBranchDetails.AddressPostcode)</div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            @if (Model.Buttons.BranchBlockButton)
                            {
                                buttonId = "block:branch:" + Model.ListingBranchDetails.BranchId + ":" + currentAppUserId;
                                <button type="submit" class="btn btn-xs btn-danger" id=@buttonId onclick="buttonClick(id)"><span class="glyphicon glyphicon-remove"></span>Block</button>
                            }
                            @if (Model.Buttons.BranchAddFriendButton)
                            {
                                buttonId = "friend:branch:" + Model.ListingBranchDetails.BranchId + ":" + currentAppUserId;
                                <button type="submit" class="btn btn-xs btn-success" id=@buttonId onclick="buttonClick(id)"><span class="glyphicon glyphicon-plus"></span>Friend</button>
                            }
                            @if (Model.Buttons.BranchAddToGroupButton)
